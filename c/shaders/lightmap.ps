#version 400

in vec2 texCoord;

out vec4 outputColor;

uniform sampler2D shaderTexture1;
uniform sampler2D shaderTexture2;

void main(void)
{
  vec4 color;
  vec4 lightColor;

  color = texture(shaderTexture1, texCoord);
  lightColor = texture(shaderTexture2, texCoord);

  outputColor = color * lightColor;
}

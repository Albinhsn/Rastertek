#version 400

in vec2 texCoord;
in float fogFactor;

out vec4 outputColor;

uniform sampler2D shaderTexture;

void main(void)
{
  vec4 textureColor;
  vec4 fogColor;

  textureColor = texture(shaderTexture, texCoord);

  fogColor = vec4(0.5f, 0.5f, 0.5f, 1.0f);

  outputColor = fogFactor * textureColor + (1.0 - fogFactor) * fogColor;
}
